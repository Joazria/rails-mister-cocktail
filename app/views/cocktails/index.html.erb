
<div class="container">
  <div class="content">
    <div class="home-banner">
      <h1>Bistrots les Amis</h1>
      <span id="banner-typed-text"></span>
    </div>
     <br>
      <% @cocktails.each do |cocktail|%>
        <% if cocktail.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, :width=>400, :aspect_ratio=>"4:3", :crop=>"fill" %>')">

            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %> </h2>
          </div>
          <br>
        <% end %>
      <% end %>
      <br>
    </div>
  <%= link_to "create a new cocktail", new_cocktail_path, :class => "btn btn-primary" %>

</div>
<div class="row">
        <% @cocktails.each do |cocktail| %>
         <% if cocktail.photo.attached? %>
            <div class="card col-4">
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
                  <h5 class="card-title"> <%= cocktail.name %> </h5>
                  <p class="card-text"> <%= cocktail.ingredients %> </p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"> <%= cocktail.ingredients %> </li>
                  <li class="list-group-item"> <%= cocktail.doses %> ðŸ’² </li>
                </ul>
                <div class="card-body">
                   <%= link_to 'more infos', cocktail_path(cocktail), class: "btn btn-success" %>
                      <%= link_to 'edit', edit_cocktail_path(cocktail), class: "btn btn-primary" %>
                      <%= link_to 'Delete', cocktail_path(cocktail),
                            data: {:confirm => 'Are you sure?'}, :method => :delete , class: "btn btn-danger"%>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
