
<div class="container">
  <h1>Bistrots les Amis</h1>
  <%= cl_image_tag("https://res.cloudinary.com/numama/image/upload/v1603307541/oe2tgmzz8vuh2b5phmxu.jpg",
      width: 400, height: 300, crop: :fill) %>

    <% @cocktails.each do |cocktail|%>
      <% if cocktail.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %> </h2>
        </div>
        <br>
      <% end %>
    <% end %>
    <br>

  <%= link_to "create a new cocktail", new_cocktail_path, :class => "btn btn-primary" %>

</div>
