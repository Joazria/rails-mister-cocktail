<h1>edit cocktail</h1>


<% @cocktail.doses.each do |dose|%>
     <ul><li class="list-inline-item"> <%= dose.description  %> </li>
     <li class="list-inline-item"> <%= dose.ingredient.name %> </li></ul>

    <%= simple_form_for [edit_cocktail_dose_path(@cocktail, dose)] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description  %>
      <%= f.submit class: "btn btn-primary"%>
    <% end %>

    <% end %>

